<div id="carousel-<%= item.id %>" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% item.photos.each do |photo| %>
      <div class="carousel-item active">
        <%= cl_image_tag photo.key, class:"d-block w-100", height: 200, width: 300, crop: :fill %>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= item.id %>" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= item.id %>" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
  </div>
    <div class="card-body">
      <p class="card-title"><%= item.name%></p>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <div class= "d-flex justify-content-between">
        <p class="card-price">$ <%= item.value%></p>
        <a href="/items/<%=item.id%>" class="btn btn-outline-secondary" style="border-radius:20px;padding:10px">Rent</a>
      </div>
    </div>
</div>
