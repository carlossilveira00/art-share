<div class="login-card my-4">
  <h2 class='text-center'>New Profile</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),data: {turbo: false} ) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="field">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "first_name" }%>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last_name" }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :photos,
                    autofocus: true,
                    as: :file, input_html: { multiple: false } %>
        <%= f.input :description,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "description" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
    </div>
    <div class="form-actions text-center">
      <input class="btn-log-in" type="submit" value="Create Account">
      <%= "_______________ or _______________" %>
      <a class="btn-log-in-other" type='button' href="/users/sign_in">I have an account</a>
      <input class="btn-log-in-google"  type="submit" value="Continue with Google">
      <input class="btn-log-in-facebook" type="submit" value="Continue with Facebook">
    </div>
  <% end %>
</div>
