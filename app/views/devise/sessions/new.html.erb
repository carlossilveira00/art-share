<div class="login-card my-4">
  <h2 class='text-center'>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <input class="btn-log-in" type="submit" value="Continue">
      <%= "_______________ or _______________" %>

      <a class="btn-log-in-other" type='button' href="/users/sign_up">Create Account</a>
      <input class="btn-log-in-google" type='submit' value="Continue with Google">
      <input class="btn-log-in-facebook" type='submit' value="Continue with Facebook">
    </div>
    <div>
    <a class="password-new" href="url">Forgot your password?</a>
    </div>
  <% end %>
</div>
