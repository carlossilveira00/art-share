<div id="index-page">

  <div class="div-for-item-bar">
    <ul class="items-bar d-flex justify-space-between">
      <li>
        <%= link_to items_path(query: "paintings") do %>
          <i class="fa-solid fa-palette"></i>
          <p>Paitings</p>
        <% end %>
      </li>
      <li>
        <%= link_to items_path(query: "sculptures") do %>
        <i class="fa-solid fa-person-walking"></i>
        <p>Sculptures</p>
        <% end %>
      </li>
      <li>
        <%= link_to items_path(query: "drawings") do %>
          <i class="fa-solid fa-pencil"></i>
          <p>Drawings</p>
        <% end %>
      </li>
      <li>
        <%= link_to items_path(query: "ceramics") do %>
          <i class="fa-solid fa-whiskey-glass"></i>
          <p>Ceramics</p>
        <% end %>
      </li>
      <li>
        <%= link_to items_path(query: "photography") do %>
          <i class="fa-solid fa-camera-retro"></i>
          <p>Photography</p>
        <% end %>
      </li>
      <li>
        <%= link_to items_path(query: "crafts") do %>
          <i class="fa-solid fa-compass-drafting"></i>
          <p>Crafts</p>
        <% end %>
      </li>
    </ul>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @items.each do |item|%>
      <%= link_to item_path(item), class: "clickable-cards" do %>
        <div class="col" >
          <div class="card-art">
            <div id="carousel-<%= item.id %>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% item.photos.each do |photo| %>
                  <div class="carousel-item active">
                    <%= cl_image_tag photo.key, class:"d-block w-100", height: 200, width: 300, crop: :fill %>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= item.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= item.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="card-body">
              <div class= "price-btn d-flex justify-content-between">
                <p class="card-title"><%= item.name %></p>
                <p class="card-price">$ <%= item.value %></p>
              </div>
              <p class="card-text" style="overflow:scroll;height:100px;"><%= item.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <%end%>
  </div>
</div>
