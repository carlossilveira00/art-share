<div id="index-page">

  <div class="div-for-item-bar">
    <ul class="items-bar d-flex">
      <li><i class="fa-solid fa-palette"></i> <%= link_to "Paitings" %></li>
      <li><i class="fa-solid fa-person-walking"> </i> <%= link_to "Sculptures" %></li>
      <li><i class="fa-solid fa-pencil"></i> </i> <%= link_to "Drawings" %></li>
      <li><i class="fa-solid fa-whiskey-glass"></i></i> <%= link_to "Ceramics" %></li>
      <li><i class="fa-solid fa-camera-retro"></i> <%= link_to "Photography" %></li>
      <li><i class="fa-solid fa-compass-drafting"></i> <%= link_to "Crafts" %></li>
    </ul>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @items.each do |item|%>
      <%= link_to item_path(item), class: "clickable-cards" do %>
        <div class="col" >
          <div class="card-art">
            <div id="carousel-<%= item.id %>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% item.photos.each do |photo| %>
                  <div class="carousel-item active">
                    <%= cl_image_tag photo.key, class:"d-block w-100", height: 200, width: 300, crop: :fill %>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= item.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= item.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="card-body">
              <div class= "price-btn d-flex justify-content-between">
                <p class="card-title"><%= item.name %></p>
                <p class="card-price">$ <%= item.value %></p>
              </div>
              <p class="card-text" style="overflow:scroll;height:100px;"><%= item.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <%end%>
</div>
